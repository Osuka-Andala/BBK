<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card_semitrans"
    android:orientation="vertical"
    android:padding="2dp">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_customers" />

    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgAvatar"
        android:layout_toRightOf="@+id/imgAvatar"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="FRANCIS OMONDI"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCustomerName"
        android:layout_toRightOf="@+id/imgAvatar"
        android:ellipsize="end"
        android:lines="2"
        android:singleLine="true"
        android:text="0726128484"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="00:00:00"
        android:textColor="@color/black"
        android:textSize="12dp" />

</RelativeLayout>